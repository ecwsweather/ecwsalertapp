<%- include('../partials/header'); %>

<div class="form-div">
	<h1>Register for E-mail Alerts</h1>
	<form action="/register" method="POST">
		<div class="form-group">
			<input class="text-box" type="text" name="name" value= "<%= currentUser.name  %>">
		</div>
		<div class="form-group">
			<input class="text-box" type="email" name="email" value="<%= currentUser.email %>">
		</div>
		<div class="form-group">
			<input class="text-box" type="text" name="username" value="<%= currentUser.username %>">
		</div>
		<div class="form-group">
			<input class="text-box" type="text" name="newusername" value="<%= currentUser.username %>">
		</div>
		<div class="form-group">
			<h3>Select Alerts to Recieve:</h3>
			<% if(currentUser.maryland == true) { %>
				<h3>Maryland<input class="checkbox" type="checkbox" name="maryland" value=true checked></h3>
			<% }else { %>
				<h3>Maryland<input class="checkbox" type="checkbox" name="maryland" value=true></h3>
			<% } if(currentUser.virginia == true) { %>
				<h3>Virginia<input class="checkbox" type="checkbox" name="virginia" value=true checked></h3>
			<% } else { %>
				<h3>Virginia<input class="checkbox" type="checkbox" name="virginia" value=true></h3>
			<% } if(currentUser.pennsylvania == true) { %>
				<h3>Pennsylvania<input class="checkbox" type="checkbox" name="pennsylvania" value=true checked></h3>
			<% } else { %>
				<h3>Pennsylvania<input class="checkbox" type="checkbox" name="pennsylvania" value=true></h3>
			<% } %>
		</div>
		<button>Submit</button>
	</form>
</div>

<%- include('../partials/footer'); %>