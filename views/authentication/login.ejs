<%- include('../partials/header'); %>

<div style="width: 30%;margin: 25px auto;">
	<h1>Log In to ECWS Alert Center!</h1>
	<form action="/login" method="POST">
		<div class="form-group">
			<input type="text" name="username" placeholder="username">
		</div>
		<div class="form-group">
			<input type="password" name="password" placeholder="password">
		</div>
		<div class="form-group">
			<button class="btn btn-primary btn-lg">Sign In</button>
		</div>
		<div class="form-group">
			<a class="btn btn-primary btn-md" href="/forgot">Forgot Password</a>
			<a class="btn btn-primary btn-md" href="/register">Create Account</a>
		</div>
	</form>
</div>

<%- include('../partials/footer'); %>